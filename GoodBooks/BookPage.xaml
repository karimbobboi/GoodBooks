<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoodBooks.BookPage">
    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Row="0"
            BackgroundColor="Black"
            HeightRequest="410">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image x:Name="backImg"
                    Grid.Row="0" Grid.Column="0"
                    MaximumHeightRequest="410"
                    Aspect="AspectFill"
                    Opacity="0.3"/>
                <CarouselView x:Name="imgs" Grid.Row="0" Grid.Column="0"
                    HorizontalScrollBarVisibility="Always" >
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalOptions="Center">
                                <Image
                                    Source="{Binding .}" Aspect="AspectFit"
                                    VerticalOptions="Center" HorizontalOptions="Center"
                                    HeightRequest="350"
                                    WidthRequest="350"/>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
            </Grid>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1">
            <Label x:Name="title"
                HorizontalOptions="Center"
                FontAttributes="Bold"/>
            <Label x:Name="author"
                HorizontalOptions="Center"/>
            </VerticalStackLayout>
            <StackLayout Grid.Row="2"
                Orientation="Horizontal"
                Margin="20,0,20,0"
                HorizontalOptions="FillAndExpand">
                <Button Text="Add to cart"
                    HorizontalOptions="FillAndExpand"
                    Margin="10,0,10,0"/>
            </StackLayout>
            <StackLayout Grid.Row="3"
                 Orientation="Horizontal"
                 Margin="30,5,30,0">
                <Label x:Name="price"
                    FontAttributes="Bold"
                    FontSize="25"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>
                <Label Text="Sold by:"
                    FontSize="13"
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="Center"
                    Margin="0,0,5,0"/>
                <Label x:Name="seller"
                    FontAttributes="Bold"
                    FontSize="15"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
            </StackLayout>
            <StackLayout Grid.Row="4"
                Margin="30,0,30,0"
                Spacing="10">
                <BoxView
                    HeightRequest="2"
                    HorizontalOptions="Fill" />
                
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" HorizontalOptions="Center"
                        Orientation="Horizontal">
                    <StackLayout>
                        <Label Text="Publisher"
                            HorizontalTextAlignment="Center"
                            FontSize="12"/>
                        <Label x:Name="publisher"
                            FontSize="15" HorizontalTextAlignment="Center"
                            FontAttributes="Bold"/>
                    </StackLayout>
                </StackLayout>
                
                <BoxView Color="Gray" Grid.Column="0" HorizontalOptions="End"
                      WidthRequest="2"
                      VerticalOptions="Fill" />
                <StackLayout Grid.Column="1" HorizontalOptions="Center"
                             Orientation="Horizontal">
                    <StackLayout>
                        <Label Text="Year"
                            HorizontalTextAlignment="Center"
                            FontSize="12"/>
                        <Label x:Name="year"
                            FontSize="15" HorizontalTextAlignment="Center"
                            FontAttributes="Bold"/>
                    </StackLayout>
                </StackLayout>
                
                    <BoxView Color="Gray" Grid.Column="1" HorizontalOptions="End"
                        WidthRequest="2"
                        VerticalOptions="Fill" />
                <StackLayout Grid.Column="2" HorizontalOptions="Center"
                             Orientation="Horizontal">
                    <StackLayout>
                        <Label Text="Language"
                            HorizontalTextAlignment="Center"
                            FontSize="12"/>
                        <Label x:Name="lang" FontSize="15" HorizontalTextAlignment="Center"
                            FontAttributes="Bold"/>
                    </StackLayout>
                </StackLayout>
                <BoxView Color="Gray" Grid.Column="2" HorizontalOptions="End"
                        WidthRequest="2"
                        VerticalOptions="Fill" />
                <StackLayout Grid.Column="3" HorizontalOptions="Center"
                             Orientation="Horizontal">
                    <StackLayout>
                        <Label Text="Genre"
                            HorizontalTextAlignment="Center"
                            FontSize="12"/>
                        <Label x:Name="genre"
                            FontSize="15" HorizontalTextAlignment="Center"
                            FontAttributes="Bold"/>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </StackLayout>
    </Grid>
</ContentPage>
