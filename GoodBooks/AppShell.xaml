<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoodBooks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GoodBooks"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                Route="MainPage"
                ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Search">
            <ShellContent
                Route="SearchPage"
                ContentTemplate="{DataTemplate local:SearchPage}" />
        </Tab>
        <Tab Title="Add book">
            <ShellContent
                Route="AddBook"
                ContentTemplate="{DataTemplate local:AddBook}" />
        </Tab>
        <Tab Title="Account">
            <ShellContent
                Route="AccountPage"
                ContentTemplate="{DataTemplate local:AccountPage}" />
        </Tab>
    </TabBar>

</Shell>

