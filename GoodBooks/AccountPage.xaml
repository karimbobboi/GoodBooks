<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GoodBooks"
             x:Class="GoodBooks.AccountPage"
             Title="new.person">

    <ContentPage.Resources>
        <local:InverseBoolConverter x:Key="BoolConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout
                Margin="0,180,0,0"
                Padding="30,0,30,0"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                x:Name="InitialAcctPage"
                IsVisible="{Binding SignedIn, Converter={StaticResource BoolConverter}}">
                <Label 
                    Text="Welcome to GoodBooks!" Padding="0,0,0,10"
                    FontSize="Medium" FontAttributes="Bold"
                    VerticalOptions="Center" HorizontalOptions="Center" />
                <Label 
                    Text="It looks like you haven't signed in yet. We encourage you to do so to access the complete GoodBooks experience!"
                    Padding="0,0,0,10" FontSize="Small"
                    VerticalOptions="Center" HorizontalOptions="Center" />
                <Button
                    x:Name="SignInBtn" Text="Sign in"
                    Clicked="SignInBtn_Clicked" HorizontalOptions="FillAndExpand" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="mainAcctPage">
                <VerticalStackLayout Spacing="10" Margin="20,20,20,0">
                    <Grid Margin="0,0,0,10" BackgroundColor="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" /> 
                        </Grid.ColumnDefinitions>

                        <Label Text="Book listings" HorizontalOptions="Start"
                            FontSize="18" FontAttributes="Bold"/>
                        <Button Grid.Column="1" TextColor="Black" BackgroundColor="Transparent"
                            Text="See all >" Padding="0" HorizontalOptions="End" Clicked="SeeAllBtn_Clicked" />
                    </Grid>

                    <CarouselView x:Name="listings" Loop="False" IndicatorView="indicatorView"
                        HorizontalScrollBarVisibility="Always" EmptyView="You have no book listings."
                        PeekAreaInsets="120">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"
                                SnapPointsType="MandatorySingle" SnapPointsAlignment="Center" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Grid WidthRequest="100" HeightRequest="200" BackgroundColor="Transparent">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Frame Grid.Row="0" WidthRequest="100" CornerRadius="5" HasShadow="True">
                                        <Image Source="{Binding images[0]}" Aspect="AspectFit"/>
                                    </Frame>
                                    <StackLayout Grid.Row="1">
                                        <Label Text="{Binding name}" FontSize="13" FontAttributes="Bold" />
                                        <Label Text="{Binding author}" FontSize="12" />
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicatorView" IndicatorColor="LightGray"
                        SelectedIndicatorColor="DarkGray" HorizontalOptions="Center" />

                    <Label Text="Recently viewed books" HorizontalOptions="Start"
                        Margin="0,20,0,0" FontSize="18" FontAttributes="Bold"/>
                    <CarouselView x:Name="recents" Loop="False" IndicatorView="indicatorView2"
                         EmptyView="No book has been viewed yet."  HorizontalScrollBarVisibility="Always" PeekAreaInsets="120">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"
                                SnapPointsType="MandatorySingle"
                                SnapPointsAlignment="Start" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Grid WidthRequest="100" HeightRequest="200" BackgroundColor="Transparent">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Frame Grid.Row="0" WidthRequest="100" CornerRadius="5" HasShadow="True">
                                        <Image Source="{Binding images[0]}" Aspect="AspectFit"/>
                                    </Frame>
                                    <StackLayout Grid.Row="1">
                                        <Label Text="{Binding name}" FontSize="13" FontAttributes="Bold" />
                                        <Label Text="{Binding author}" FontSize="12" />
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicatorView2"
                        IndicatorColor="LightGray"
                        SelectedIndicatorColor="DarkGray"
                        HorizontalOptions="Center" />

                    <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                        <Button
                            Text="Log out" BackgroundColor="#BF211E"
                            Clicked="LogOutBtn_Clicked" IsVisible="true" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
            <Button x:Name="InBtn"
                Text="click" Clicked="InBtn_Clicked"
                IsVisible="true" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
